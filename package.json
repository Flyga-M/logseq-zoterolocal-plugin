{
  "name": "logseq-zoterolocal-plugin",
  "author": "benjypng",
  "description": "Connect to Zotero locally using Zotero Beta 7 (and above), import and keep track of your Zotero library.",
  "license": "MIT",
  "logseq": {
    "id": "logseq-zoterolocal-plugin",
    "title": "logseq-zoterolocal-plugin",
    "icon": "./icon.svg",
    "main": "dist/index.html"
  },
  "scripts": {
    "dev": "npx vite",
    "build": "npx eslint . && npx tsc && npx vite build",
    "preview": "npx vite preview"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/github",
        {
          "assets": [
            "logseq-zoterolocal-plugin.zip"
          ],
          "options": {
            "successComment": false
          }
        }
      ]
    ]
  },
  "dependencies": {
    "@logseq/libs": "^0.0.17",
    "@mantine/core": "^7.12.1",
    "@mantine/form": "^7.12.1",
    "@mantine/hooks": "^7.12.1",
    "@mantine/tiptap": "^7.12.1",
    "@tabler/icons-react": "^3.12.0",
    "@tanstack/react-table": "^8.20.1",
    "@tiptap/extension-link": "^2.6.4",
    "@tiptap/react": "^2.6.4",
    "@tiptap/starter-kit": "^2.6.4",
    "axios": "^1.7.3",
    "date-fns": "^3.6.0",
    "fuse.js": "^7.0.0",
    "inter-ui": "^4.0.2",
    "lucide-react": "^0.427.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.52.2",
    "react-query": "^3.39.3",
    "zotero-api-client": "^0.44.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@types/eslint": "^9.6.0",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.1.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "postcss": "^8.4.41",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1",
    "vite": "^5.4.0",
    "vite-plugin-logseq": "^1.1.2",
    "vite-tsconfig-paths": "^5.0.0"
  }
}
